{
  "manifest_version": 3,
  "name": "Point&Click Adapter",
  "version": "0.1.0",
  "description": "WebSocketâ€‘controlled adapter that exposes safe DOM actions for an AI agent.",
  "permissions": ["scripting", "activeTab", "tabs", "storage", "downloads"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "128": "icons/icon128.png" },
  "action": { "default_title": "Point&Click Adapter" }
}